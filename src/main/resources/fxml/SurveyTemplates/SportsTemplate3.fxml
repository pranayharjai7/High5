<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import org.controlsfx.control.Rating?>

<ScrollPane prefHeight="700.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Survey5.controller.SurveyTemplateControllers.SportsTemplate3Controller">

    <content>
        <AnchorPane id="AnchorPane" fx:id="SportsTemplate3AnchorPane" prefHeight="996.0" prefWidth="1200.0" styleClass="SportsTemplate3AnchorPaneBackground" stylesheets="@TemplateStyles/tempcss1.css">
            <children>
                <Label fx:id="Question1" layoutX="30.0" layoutY="89.0" prefHeight="26.0" prefWidth="181.0" style="-fx-background-color: white;" text=" 1. Do you like Cycling?">
                    <font>
                        <Font name="Arial Rounded MT Bold" size="16.0" />
                    </font>
                </Label>
                <RadioButton fx:id="Answer1_1" layoutX="38.0" layoutY="135.0" mnemonicParsing="false" text="Yes" textFill="WHITE">
                    <toggleGroup>
                        <ToggleGroup fx:id="answer1" />
                    </toggleGroup>
                </RadioButton>
                <RadioButton fx:id="Answer1_2" layoutX="38.0" layoutY="162.0" mnemonicParsing="false" text="No" textFill="WHITE" toggleGroup="$answer1" />
                <Label fx:id="Question2" layoutX="30.0" layoutY="211.0" prefHeight="26.0" prefWidth="209.0" style="-fx-background-color: white;" text=" 2. Can you ride a bicycle ?">
                    <font>
                        <Font name="Arial Rounded MT Bold" size="16.0" />
                    </font>
                </Label>
                <RadioButton fx:id="Answer2_1" layoutX="38.0" layoutY="262.0" mnemonicParsing="false" text="Yes" textFill="WHITE">
                    <toggleGroup>
                        <ToggleGroup fx:id="answer2" />
                    </toggleGroup></RadioButton>
                <RadioButton fx:id="Answer2_2" layoutX="39.0" layoutY="286.0" mnemonicParsing="false" text="No" textFill="WHITE" toggleGroup="$answer2" />
                <Label fx:id="Question3" layoutX="29.0" layoutY="343.0" prefHeight="26.0" prefWidth="427.0" style="-fx-background-color: white;" text=" 3. Do you consider Cycling as a sport or as a hobby ?">
                    <font>
                        <Font name="Arial Rounded MT Bold" size="16.0" />
                    </font>
                </Label>
                <RadioButton fx:id="Answer3_1" layoutX="38.0" layoutY="386.0" mnemonicParsing="false" text="Sport" textFill="WHITE">
                    <toggleGroup>
                        <ToggleGroup fx:id="answer3" />
                    </toggleGroup></RadioButton>
                <RadioButton fx:id="Answer3_2" layoutX="38.0" layoutY="414.0" mnemonicParsing="false" text="Hobby" textFill="WHITE" toggleGroup="$answer3" />
                <Label fx:id="Question4" layoutX="33.0" layoutY="463.0" prefHeight="26.0" prefWidth="420.0" style="-fx-background-color: white;" text=" 4. How willing are you to start learning how to cycle ? ">
                    <font>
                        <Font name="Arial Rounded MT Bold" size="16.0" />
                    </font>
                </Label>
                <Rating fx:id="Answer4" layoutX="187.0" layoutY="500.0" rating="3.0" updateOnHover="true" />
                <Label fx:id="Question5" layoutX="31.0" layoutY="545.0" prefHeight="26.0" prefWidth="208.0" style="-fx-background-color: white;" text=" 5. Do you cycle regularly?">
                    <font>
                        <Font name="Arial Rounded MT Bold" size="16.0" />
                    </font>
                </Label>
                <TextField fx:id="Answer5" layoutX="141.0" layoutY="593.0" prefHeight="26.0" prefWidth="203.0" promptText="e.g daily /once a week/I don't cycle" />
                <Label fx:id="Question6" layoutX="32.0" layoutY="659.0" prefHeight="26.0" prefWidth="323.0" style="-fx-background-color: white;" text=" 6. Any additional Comments ? (Optional) ">
                    <font>
                        <Font name="Arial Rounded MT Bold" size="16.0" />
                    </font>
                </Label>
                <TextArea fx:id="Answer6" layoutX="29.0" layoutY="718.0" prefHeight="150.0" prefWidth="743.0" promptText="e.g What was the longest distance you covered cycling?" />
                <Button fx:id="saveButton" layoutX="366.0" layoutY="900.0" mnemonicParsing="false" onAction="#saveButtonClicked" prefHeight="34.0" prefWidth="132.0" text="Save">
                    <font>
                        <Font size="15.0" />
                    </font></Button>
                <Button fx:id="backButton" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#backButtonClicked" prefHeight="32.0" prefWidth="50.0" styleClass="addBackButtonPic" stylesheets="@../../styles/Modification.css" />
                <Label fx:id="SportsTemplate3" layoutX="352.0" layoutY="26.0" text="Cycling">
                    <font>
                        <Font name="System Bold Italic" size="28.0" />
                    </font>
                </Label>
                <Separator layoutX="344.0" layoutY="64.0" prefHeight="3.0" prefWidth="116.0" style="-fx-background-color: black;" />

            </children>
        </AnchorPane>
    </content>
</ScrollPane>
